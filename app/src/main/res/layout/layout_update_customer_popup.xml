<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10px">

    <LinearLayout
        android:id="@+id/popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/text_box_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_box_style"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Loyalty Customer Updation"
                android:textAlignment="center"
                android:textColor="@color/TextColor"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="0.40"
                android:gravity="start"
                android:text="First Name:"
                android:textAlignment="viewStart"
                android:textColor="@color/TextColor" />

            <EditText
                android:id="@+id/txtlyltyNameUpdate"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.60"
                android:background="@drawable/text_box_style"
                android:focusable="true"
                android:gravity="start"
                android:maxLines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:selectAllOnFocus="true"
                android:textColor="@color/TextColor"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="0.40"
                android:gravity="start"
                android:text="Last Name:"
                android:textAlignment="viewStart"
                android:textColor="@color/TextColor" />

            <EditText
                android:id="@+id/txtlyltylastNameUpdate"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.60"
                android:background="@drawable/text_box_style"
                android:focusable="true"
                android:gravity="start"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:textColor="@color/TextColor"
                android:textSize="16sp" />

        </LinearLayout>

        <RadioGroup

            android:id="@+id/radioGroupUpdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="0.25"
                android:gravity="start"
                android:text="Gender:"
                android:textAlignment="viewStart"
                android:textColor="@color/TextColor" />

            <RadioButton
                android:id="@+id/radioButtonM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:text="Male"
                android:textColor="@color/TextColor" />

            <RadioButton
                android:id="@+id/radioButtonF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.40"
                android:text="Female"
                android:textColor="@color/TextColor" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/UpdateLyltyCustomer"
                android:layout_width="0dp"
                android:layout_height="35sp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.40"
                android:background="#FA8C01"
                android:text="Update"
                android:textColor="@color/TextColor"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CancellyltyUpdate"
                android:layout_width="0dp"
                android:layout_height="35sp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.40"
                android:background="#FA8C01"
                android:text="CANCEL"
                android:textColor="@color/TextColor"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>