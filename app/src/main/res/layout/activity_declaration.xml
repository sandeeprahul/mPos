<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_box_style"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/text_box_style"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Cash Declaration"
                    android:textAlignment="center"
                    android:textColor="@color/TextColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/text_box_style"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/linearLayoutCash"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.25"
                        android:gravity="start"
                        android:text="CASH"
                        android:textColor="@color/TextColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dec_cash"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.60"
                        android:background="@drawable/text_box_style"
                        android:gravity="center"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:text="0.00"
                        android:textColor="@color/TextColor"
                        android:textCursorDrawable="@drawable/cursor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.25"
                        android:gravity="start"
                        android:text="CC/DC"
                        android:textColor="@color/TextColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dec_cc"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.60"
                        android:text="0.00"
                        android:selectAllOnFocus="true"
                        android:background="@drawable/text_box_style"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/TextColor"
                        android:textCursorDrawable="@drawable/cursor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.25"
                        android:gravity="start"
                        android:text="COUPON"
                        android:textColor="@color/TextColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dec_coupon"
                        android:layout_width="0dp"
                        android:enabled="false"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.60"
                        android:background="@drawable/text_box_style"
                        android:gravity="center"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:text="0.00"
                        android:textColor="@color/TextColor"
                        android:textCursorDrawable="@drawable/cursor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.25"
                        android:gravity="start"
                        android:text="LOYALTY"
                        android:textColor="@color/TextColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dec_lylty"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.60"
                        android:background="@drawable/text_box_style"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0.00"
                        android:enabled="false"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/TextColor"
                        android:textCursorDrawable="@drawable/cursor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.25"
                        android:gravity="start"
                        android:text="WALLET"
                        android:textColor="@color/TextColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dec_wallet"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.60"
                        android:text="0.00"
                        android:selectAllOnFocus="true"
                        android:background="@drawable/text_box_style"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/TextColor"
                        android:enabled="false"
                        android:textCursorDrawable="@drawable/cursor" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_dec_submit"
                    android:layout_width="110sp"
                    android:layout_height="35sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#FA8C01"
                    android:text="SUBMIT"
                    android:textColor="@color/TextColor"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_dec_cancel"
                    android:layout_width="110sp"
                    android:layout_height="35sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#FA8C01"
                    android:text="Cancel"
                    android:textColor="@color/TextColor"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
